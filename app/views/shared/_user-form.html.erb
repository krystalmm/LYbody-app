<%= form_with model: model, url: url, id: 'user-form', local: true do |f| %>
  <div class="form-group col-10 offset-1">
    <%= f.label 'お名前' %><span class="essential-icon">必須</span>
    <div class="row mt-2 pl-4">
      <%= f.label :firstname, '（性）', class: 'pt-1 pr-3' %>
      <%= f.text_field :firstname, autofocus: true, autocomplete: 'firstname', placeholder: '山田', class: 'form-control col-4 validate[required] mr-5' %>
      <%= f.label :lastname, '（名）', class: 'pt-1 pr-3' %>
      <%= f.text_field :lastname, autofocus: true, autocomplete: 'lastname', placeholder: '太郎', class: 'form-control col-4 validate[required]' %>
    </div>
  </div>
  <div class="form-group col-10 offset-1 mt-4">
    <%= f.label 'フリガナ' %><span class="essential-icon">必須</span>
    <div class="row mt-2 pl-4">
      <%= f.label :kana_firstname, '（性）', class: 'pt-1 pr-3' %>
      <%= f.text_field :kana_firstname, autofocus: true, autocomplete: 'kana_firstname', placeholder: 'ヤマダ', class: 'form-control col-4 validate[required, custom[katakana]] mr-5' %>
      <%= f.label :kana_lastname, '（名）', class: 'pt-1 pr-3' %>
      <%= f.text_field :kana_lastname, autofocus: true, autocomplete: 'kana_lastname', placeholder: 'タロウ', class: 'form-control col-4 validate[required, custom[katakana]]' %>
    </div>
  </div>
  <div class="form-group col-10 offset-1 mt-5">
    <%= f.label :email, 'メールアドレス' %><span class="essential-icon">必須</span>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'lybody@example.com', class: 'form-control validate[required, custom[email]] mt-2' %>
  </div>
  <div class="form-group col-10 offset-1 mt-5">
    <%= f.label :phone_number, '電話番号' %><span class="essential-icon">必須</span>
    <%= f.text_field :phone_number, autofocus: true, autocomplete: 'phone_number', placeholder: '00011112222', class: 'form-control validate[required, custom[phone]] mt-2' %>
    <small class="form-text text-muted pt-1"> ※ 電話番号はハイフン（-）無しで記入してください。</small>
  </div>
  <div class="form-group col-10 offset-1 mt-4">
    <%= f.label :password, 'パスワード' %><span class="essential-icon">必須</span>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', placeholder: '設定したいパスワードを入力してください', class: 'form-control validate[required, minSize[8], custom[onlyLetterNumber]] mt-2', id: 'password' %>
    <small class="form-text text-muted pt-1"> ※ パスワードは半角英数字８文字以上で入力してください。</small>
  </div>
  <div class="form-group col-10 offset-1 mt-4">
    <%= f.label :password_confirmation, "パスワード（確認）" %><span class="essential-icon">必須</span>
    <%= f.password_field :password_confirmation, autofocus: true, autocomplete: 'new-password', placeholder: '確認のため、もう一度入力してください', class: 'form-control validate[required, equals[password], minSize[8], custom[onlyLetterNumber]] mt-2' %>
  </div>
  <div class="submit-button text-center">
    <%= f.submit submit_text, class: 'btn btn-outline-light btn-lg px-5 mt-5' %>
  </div>
<% end %>
