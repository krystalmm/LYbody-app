<table class="table text-center">
  <thead>
    <tr>
      <td class="table-sm-width">会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>会員ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to instructors_user_path(user) do %>
            <%= user.fullname %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td><%= valid_value?(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>