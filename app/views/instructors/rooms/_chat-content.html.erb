<div id="instructor-chats" class="chats">
  <% chats.each do |chat| %>
    <% if chat.is_user == false %>
      <div class="my-chats">
        <p><%= safe_join(chat.message.split("\n"),tag(:br)) %></p>
      </div>
    <% else %>
      <div class="user-chats d-flex">
        <div class="user-icon">
          <%= image_tag room.user.icon_image.url %>
        </div>
        <div class="chat-wrap">
          <div class="chat-content">
            <p><%= safe_join(chat.message.split("\n"),tag(:br)) %></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>