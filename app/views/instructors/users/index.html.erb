<% provide(:title, '会員一覧 | LYbody - インストラクター') %>

<%= render 'shared/backpage' %>

<div class="container">
  <div class="row">
    <div class="users col-md-8 offset-md-2 col-10 offset-1">
      <h2 class="border-heading-bottom mb-5">会員一覧<span class="text-sm">（※ 入会者のみ）</span></h2>
      <table class="table text-center">
        <thead>
          <tr>
            <td class="table-sm-width">会員ID</td>
            <td>氏名</td>
            <td>メールアドレス</td>
            <td>会員ステータス</td>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td>
                <%= link_to instructors_user_path(user) do %>
                  <%= user.fullname %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td><%= is_valid_value(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>