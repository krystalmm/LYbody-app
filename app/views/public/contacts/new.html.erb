<% provide(:title, 'お問い合わせ | LYbody') %>

<%= render 'shared/backpage' %>

<div class="container">
  <div class="row">
    <div class="contact col-10 offset-1">
      <h2 class="border-heading-bottom mb-5">お問い合わせフォーム</h2>
      <div class="contact-form col-10 offset-1">
        <%= form_with model: @contact, url: confirm_path, id: 'contact-form', local: true do |f| %>
          <div class="form-group">
            <%= f.label :name, "お名前" %><span class="essential-icon">必須</span>
            <%= f.text_field :name, autocomplete: 'name', placeholder: '例：令和 道子', class: 'form-control col-5 validate[required] mt-2' %>
          </div>
          <div class="form-group mt-5">
            <%= f.label :email, "メールアドレス" %><span class="essential-icon">必須</span>
            <%= f.email_field :email, autocomplete: 'email', placeholder: '例：lybody@example.com', class: 'form-control col-5 validate[required, custom[email]] mt-2' %>
          </div>
          <div class="form-group mt-5">
            <%= f.label :message, "お問い合わせ内容" %><span class="essential-icon">必須</span>
            <%= f.text_area :message, rows: 5, placeholder: 'こちらにお問い合わせ内容をお書きください', class: 'form-control validate[required] mt-2' %>
          </div>
          <div class="contact-submit text-center my-5 py-3">
            <%= f.submit "入力内容を確認する", class: 'btn btn-outline-light' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>